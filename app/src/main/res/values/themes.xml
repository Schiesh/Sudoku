<resources>
    <!-- Base application theme. -->
    <style name="Theme.Sudoku" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/gray</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="textBlock">
       <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/button_state_pressed</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:inputType">number</item>
        <item name="android:text">""</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttons">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>
